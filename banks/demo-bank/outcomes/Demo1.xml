<?xml version='1.0' encoding='UTF-8'?>
<exercise xmlns="https://spatext.clontz.org" version="0.0">
    <statement>
        <cases of="alt_prompt">
            <case-true>
                <p>
For each of the following line equations, identify its slope.
                </p>
            </case-true>
            <otherwise>
                <p>
Identify the slope for each of the following line equations.
                </p>
            </otherwise>
        </cases>
        <ol>
            <for-each of="lines">
                <li><m><v of="equation"/></m></li>
            </for-each>
        </ol>
    </statement>
    <answer>
        <ol>
            <for-each of="lines">
                <li><m><v of="slope"/></m></li>
            </for-each>
        </ol>
    </answer>
</exercise>
